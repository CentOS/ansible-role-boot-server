
set timeout=600

{% for entry in boot_pxe_entries %}
{% if entry.arch == "aarch64" %}
{% set kernel_boot = 'linux' %}
{% set initrd_boot = 'initrd' %}
{% else %}
{% set kernel_boot = 'linuxefi' %}
{% set initrd_boot = 'initrdefi' %}
{% endif %}

{% if entry.dist|lower == 'rhel' %}
menuentry '{{ entry.dist }}_{{ entry.release }}_{{ entry.arch }}{% if entry.vnc is defined and entry.vnc %}_vnc{% endif %}{%if entry.rdp is defined and entry.rdp %}_rdp{% endif %}' {
	{{ kernel_boot }} boot/{{ entry.dist | lower}}/{{ entry.release}}/{{ entry.arch }}/vmlinuz ip=dhcp inst.repo={{ rhel_deploy_mirror_url}}/{{ entry.release }}/{{ entry.arch }}/ inst.lang=en_GB inst.keymap=be-latin1 {% if entry.vnc is defined and entry.vnc %}inst.vnc inst.vncpassword={{ boot_pxe_vncpass }}{% endif %} {%if entry.rdp is defined and entry.rdp %} inst.rdp inst.rdp.username=deploy inst.rdp.password={{ boot_pxe_vncpass }} {% endif %}
  
  {{ initrd_boot }} boot/{{ entry.dist | lower}}/{{ entry.release}}/{{ entry.arch }}/initrd.img  
}
{% else %}
menuentry '{{ entry.dist }}_{{ entry.release }}_{{ entry.arch }}{% if entry.vnc is defined and entry.vnc %}_vnc{% endif %}' {
	{{ kernel_boot }} boot/{{ entry.dist | lower}}/{{ entry.release}}/{{ entry.arch }}/vmlinuz ip=dhcp net.ifnames=0 biosdevname=0 inst.repo=http://mirror.stream.centos.org/{{ entry.release }}/BaseOS/{{ entry.arch }}/os/ inst.lang=en_GB inst.keymap=be-latin1 {% if entry.vnc is defined and entry.vnc %}inst.vnc inst.vncpassword={{ boot_pxe_vncpass }}{% endif %}
  
  {{ initrd_boot }} boot/{{ entry.dist | lower}}/{{ entry.release}}/{{ entry.arch }}/initrd.img  
}
{% endif %}

{% endfor %}

menuentry 'Refresh GRUB menu' {
	configfile  grub.cfg
}

menuentry 'Memory Test' {
	linuxefi memtest
}
